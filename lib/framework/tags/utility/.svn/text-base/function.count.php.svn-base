<?php
/**
 * Defines the count smarty tag, which outputs the result of a count method called on an array.
 *
 * <b>Parameters:</b><br />
 * var - The array to get the count from
 *
 * @package RabbitPHP_Tags
 * @subpackage Utility
 * @author Kerry R Wilson <kerry@rabbitphp.org>
 * @version 0.1
 */
 function smarty_function_count($params, &$smarty)
 {
 		return count($params['var']);
 }
?>