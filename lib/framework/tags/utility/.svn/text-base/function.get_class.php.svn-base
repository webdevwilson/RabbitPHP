<?php
/**
 * Defines the count get_class tag, which outputs the returns the class of an object
 *
 * <b>Parameters:</b><br />
 * object - The object to return the class of
 *
 * @package RabbitPHP_Tags
 * @subpackage Utility
 * @author Kerry R Wilson <kerry@rabbitphp.org>
 * @version 0.1
 */
 function smarty_function_get_class($params, &$smarty)
 {
     return get_class($params['object'] );
 }
?>